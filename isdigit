#include <stdio.h>
#include <ctype.h>

int main ()
{

    char n; // declare an integer type variable n

    printf (" Enter a number to check for valid digits: ");
    scanf ("%c", &n);

    // use the isdigit() function to check the digit
    if (isdigit (n))
    {
        printf (" \n It is a digit. ");
    }
    else
    {
        printf (" \n It is not a digit. ");
    }
    return 0;
}
